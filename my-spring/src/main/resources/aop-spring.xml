<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:conntext="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
	<conntext:component-scan base-package="com.example.yq.ioc.messagesource"/>
	<!--proxy-target-class="false" 默认false JDK动态代理 true:Cglib动态代理 -->
	<!--expose-proxy 暴露代理 可以直接拿到代理-->
	<aop:aspectj-autoproxy proxy-target-class="false" expose-proxy="true" >
		<!--指定代理-->
		<aop:include name="aspectJTest"/>
	</aop:aspectj-autoproxy>
	<bean id="student" class="com.example.yq.aop.pointcut.Student"/>
	<bean id="aspectJTest" class="com.example.yq.aop.config.AspectJTest"/>
</beans>
