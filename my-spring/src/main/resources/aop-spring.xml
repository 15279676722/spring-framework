<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:conntext="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
	<conntext:component-scan base-package="com.example.yq.aop.config"/>
	<!--proxy-target-class="false" 默认false JDK动态代理 true:Cglib动态代理 -->
	<!--expose-proxy 暴露代理 可以直接拿到代理-->
	<aop:aspectj-autoproxy proxy-target-class="false" expose-proxy="true" >
		<!--指定代理-->
		<aop:include name="aspectJTest"/>
	</aop:aspectj-autoproxy>
	<bean id="student" class="com.example.yq.aop.pointcut.Student">
		<constructor-arg name="name1" value="yangqiang"/>
		<constructor-arg name="id1" value="1"/>
		<constructor-arg name="age"  value="18"/>
		<constructor-arg name="job"  ref="job"/>
		<property name="id" value="2"/>
	</bean>

	<bean class="com.example.yq.aop.pointcut.StudentAutowireMode" id="studentAutowireMode" />
	<bean id="aspectJTest" class="com.example.yq.aop.config.AspectJTest"/>
	<bean class="com.example.yq.ioc.lookup.annotation.Banana" id="banana"/>
	<bean class="com.example.yq.ioc.lookup.annotation.Apple" id="apple"/>

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="com.example.yq.ioc.propertyeditor.Content" value="com.example.yq.ioc.propertyeditor.ContentPropertyEditor"></entry>
			</map>
		</property>
		<property name="propertyEditorRegistrars">
			<list>
				<bean class="com.example.yq.ioc.propertyeditor.ContentPropertyEditorRegister"></bean>
			</list>
		</property>
	</bean>
	<bean class="com.example.yq.ioc.propertyeditor.Job" id="job">
		<property name="completed" value="off" />
		<property name="content" value="关注我:紧急:100"/>
	</bean>

	<bean class="com.example.yq.ioc.beanfactory.MyBeanFactoryPostProcessor" id="myBeanFactoryPostProcessor"/>
</beans>
