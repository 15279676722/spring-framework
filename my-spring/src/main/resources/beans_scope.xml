<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="com.example.yq.ioc.scope.SingletonBean" id="singletonBean" scope="singleton"/>
	<bean class="com.example.yq.ioc.scope.PrototypeBean" id="prototypeBean" scope="prototype"/>

	<!-- 自定义scope的bean -->
	<bean id="threadBean" class="com.example.yq.ioc.scope.BeanScopeModel" scope="thread">
		<constructor-arg index="0" value="thread"/>
	</bean>
	<bean class="com.example.yq.ioc.scope.MyScope" id="myScope" />
</beans>
